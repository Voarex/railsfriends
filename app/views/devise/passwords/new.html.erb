<div class="card">
  <div class="card-header">
    <h4>Forgot your password?</h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email@example.com" %>
  </div>

  <div class="actions">
    <br/>
    <%= f.submit "Reset Password", class: 'btn btn-outline-danger btn-sm' %>
  </div>
  <br/>
  <%= link_to "Sign In", new_session_path(resource_name), class:'btn btn-outline-primary btn-sm' %><br />
<% end %>
  </div>
</div>


